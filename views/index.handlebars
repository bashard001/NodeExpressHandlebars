  <textarea placeholder="What burger do you like?" style="height: 160px" id="message" name="name"></textarea>
  <input type="submit" value="submit">

</form>



<ul>
  {{#each burger}}
    <li>
      <p>name: {{burger_name}}</p>
      <p>devoured: {{devoured}}</p>
      
    </li>
  {{/each}}
</ul>
